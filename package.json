{
  "name": "fullstack-graphql",
  "version": "0.0.1",
  "private": true,
  "repository": "git@github.com:rntjr/fullstack-graphql.git",
  "license": "MIT",
  "author": "Renato Junior <48002341+rntjr@users.noreply.github.com>",
  "main": "packages/desktop/main.ts",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "",
    "build:desktop": "npm-run-all -p build:electron build:electron:react",
    "build:electron": "cross-env IS_ELECTRON=electron webpack --config webpack/desktop/webpack.production.js",
    "build:electron:react": "cross-env IS_ELECTRON=react webpack --config webpack/desktop/webpack.production.js",
    "build:server": "cross-env IS_ELECTRON=production webpack --config webpack/server/webpack.production.js",
    "build:web": "",
    "commit": "git add . && git commit",
    "dev": "",
    "dev:desktop": "npm-run-all -p dev:desktop:electron:react serve:electron",
    "dev:desktop:electron": "cross-env IS_ELECTRON=electron webpack --config webpack/desktop/webpack.development.js && yarn start:electron",
    "dev:desktop:electron:react": "cross-env IS_ELECTRON=react webpack-dev-server --config webpack/desktop/webpack.development.js",
    "dev:server": "npm-run-all --serial build:server start:server",
    "dev:server:env": "npm-run-all --serial build:server start:server:env",
    "dev:web": "",
    "postinstall": "cd ./packages/mobile && expo-yarn-workspaces postinstall",
    "lint": "eslint .",
    "lint:fix": "eslint --fix && sort-package-json",
    "package": "npm-run-all build:desktop package:dist",
    "package:dist": "electron-builder build --publish never",
    "serve:electron": "wait-on http-get://localhost:4000/ && npm run dev:desktop:electron",
    "start:electron": "yarn workspace @fullstack-graphql/desktop cross-env NODE_ENV=development electron .",
    "start:server": "node ./dist/server",
    "start:server:env": "node --require dotenv/config dist/server",
    "start:web": "",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.1.4",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@prisma/cli": "^2.6.2",
    "apollo-server": "^2.17.0",
    "clsx": "^1.1.1",
    "expo": "~38.0.9",
    "expo-splash-screen": "^0.5.0",
    "expo-status-bar": "^1.0.0",
    "expo-updates": "~0.2.8",
    "expo-yarn-workspaces": "^1.2.1",
    "graphql": "^15.3.0",
    "history": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-native": "~0.62.2",
    "react-native-gesture-handler": "~1.6.0",
    "react-native-reanimated": "~1.9.0",
    "react-native-screens": "~2.9.0",
    "react-native-unimodules": "~0.10.0",
    "react-native-web": "~0.11.7",
    "react-router-dom": "^6.0.0-beta.0"
  },
  "devDependencies": {
    "@babel/core": "~7.9.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.2",
    "@types/history": "^4.7.7",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-native": "~0.61.23",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-loader": "^8.1.0",
    "babel-preset-expo": "~8.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-expo": "~38.0.0",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "react-refresh": "^0.8.3",
    "sass-loader": "^10.0.1",
    "sort-package-json": "^1.44.0",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "wait-on": "^5.2.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.3",
    "webpack-node-externals": "^2.5.2"
  }
}
